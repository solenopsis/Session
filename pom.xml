                            <vmArgs>
                                <vmArg>-Djavax.xml.accessExternalDTD=all</vmArg>
                                <vmArg>-Djavax.xml.accessExternalSchema=all</vmArg>
                            </vmArgs>
                        </configuration>
                    </execution>

                    <execution>
                        <id>tooling-wsdl-import</id>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <configuration>
							<packageName>org.solenopsis.session.tooling</packageName>
                            <wsdlDirectory>${basedir}/src/main/resources/wsdl</wsdlDirectory>
                            <wsdlFiles>
                                <wsdlFile>Session-tooling.wsdl</wsdlFile>
                            </wsdlFiles>
                            <sourceDestDir>${project.build.directory}/generated-sources/jaxws/wsimport</sourceDestDir>
                            <bindingFiles>
                                <bindingFile>${basedir}/src/main/resources/jaxws/binding.xml</bindingFile>
                            </bindingFiles>
                            <xjcArgs>
                                <!-- Must use -B-XautoNameResolution when used on the command line -->
                                <xjcArg>-XautoNameResolution</xjcArg>
                            </xjcArgs>
                            <!-- Without this, multiple WSDLs won't be processed :( -->
                            <staleFile>${project.build.directory}/jaxws/stale/wsdl.tooling.done</staleFile>
                            <vmArgs>
                                <vmArg>-Djavax.xml.accessExternalDTD=all</vmArg>
                                <vmArg>-Djavax.xml.accessExternalSchema=all</vmArg>
                            </vmArgs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>${org.apache.maven.plugins_maven-javadoc-plugin}</version>

                <configuration>
                    <excludePackageNames>org.solenopsis.session.wsdl.*</excludePackageNames>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>${org.codehaus.mojo_cobertura-maven-plugin}</version>
                <configuration>
                    <instrumentation>
                        <ignores>
                            <ignore>org.solenopsis.session.wsdl.*</ignore>
                        </ignores>

                        <excludes>
                            <exclude>org/flossware/jcore/**/*.class</exclude>
                            <exclude>org/solenopsis/session/wsdl/**/*.class</exclude>
                            <exclude>org/solenopsis/session/**/*Test.class</exclude>
                        </excludes>
                    </instrumentation>

                    <check>
                        <branchRate>50</branchRate>
                        <lineRate>50</lineRate>
                        <haltOnFailure>false</haltOnFailure>
                        <totalBranchRate>50</totalBranchRate>
                        <totalLineRate>50</totalLineRate>
                        <packageLineRate>50</packageLineRate>
                        <packageBranchRate>50</packageBranchRate>

                        <regexes>
                            <regex>
                                <pattern>org.solenopsis.session.*</pattern>
                                <branchRate>90</branchRate>
                                <lineRate>80</lineRate>
                            </regex>
                        </regexes>
                    </check>
                </configuration>

                <executions>
                    <execution>
                        <id>instrument</id>
                        <phase>site</phase>
                        <goals>
                            <goal>instrument</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
                <version>${org.apache.maven.plugins_maven-pmd-plugin}</version>
            </plugin>

        </plugins>
    </build>

